#build_openjdk_8 artful yakkety 8u171-b11-0ubuntu0.17.10.1 ppa1
#build_openjdk_8 bionic bionic 8u222-b10-1ubuntu1~18.04.1 ppa1 enable_tuxjdk_212.patch
#build_openjdk_8 cosmic cosmic 8u212-b03-0ubuntu1.18.10.1 ppa1 enable_tuxjdk_212.patch
#build_openjdk_8 disco disco 8u222-b10-1ubuntu1~19.04.1 ppa1 enable_tuxjdk_212.patch
