#!/bin/sh

set -ex

build_openjdk_7() {
  local dist=$1
  local dist_packaging=$2
  local version=$3
  local ppa_version=$4
  ../docker-builder/run $dist ./get-source openjdk-7 $version
  ../docker-builder/run $dist_packaging ./build-package openjdk-7 $version $dist $ppa_version enable_infinality.patch

  git tag ${dist}-openjdk-7-${version}${ppa_version}
}

build_openjdk_8() {
  local dist=$1
  local dist_packaging=$2
  local version=$3
  local ppa_version=$4
  ../docker-builder/run $dist ./get-source openjdk-8 $version
  ../docker-builder/run $dist_packaging ./build-package openjdk-8 $version $dist $ppa_version enable_tuxjdk_191.patch

  git tag ${dist}-openjdk-8-${version}${ppa_version}
}

#build_openjdk_7 trusty trusty 7u181-2.6.14-0ubuntu0.3 ppa1
#build_openjdk_8 xenial xenial 8u191-b12-0ubuntu0.16.04.1 ppa1
#build_openjdk_8 zesty yakkety 8u151-b12-0ubuntu0.17.04.2 ppa1
#build_openjdk_8 artful yakkety 8u171-b11-0ubuntu0.17.10.1 ppa1
#build_openjdk_8 bionic bionic 8u191-b12-0ubuntu0.18.04.1 ppa1
build_openjdk_8 cosmic cosmic 8u191-b12-0ubuntu0.18.10.1 ppa1
