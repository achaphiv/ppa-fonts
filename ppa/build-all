#build_freetype cosmic cosmic 2.8.1-2ubuntu2 '.18.10ppa1'
#../docker-builder/run cosmic ./build-cairo 1.15.12-1 '.18.10ppa1'

build_freetype_2_9_1 disco disco 2.9.1-3 'ubuntu0.19.04ppa1'
